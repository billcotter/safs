---
import { getCollection, getEntry } from 'astro:content';
import Base from "@/layouts/Base.astro";
import { Image } from 'astro:assets';

// Generate paths for all movies
export async function getStaticPaths() {
  const movies = await getCollection('movies');
  return movies.map(movie => ({
    params: { slug: movie.slug },
    props: { movie }
  }));
}

const { movie } = Astro.props;
const director = await getEntry('directors', movie.data.director);
---

<Base title={`${movie.data.title} | The Vault`}>
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-8">
        {/* Movie Poster */}
        <div>
          {movie.data.posterPath && (
            <Image
              src={`https://image.tmdb.org/t/p/original${movie.data.posterPath}`}
              alt={movie.data.title}
              width={780}
              height={1170}
              class="rounded-lg shadow-lg"
            />
          )}
        </div>

        {/* Movie Details */}
        <div>
          <h1 class="text-4xl font-bold mb-4">{movie.data.title}</h1>
          <div class="space-y-4">
            <p class="text-xl text-gray-600">{movie.data.year}</p>
            <p class="text-lg">{movie.data.plot}</p>
            
            <div class="border-t pt-4">
              <h2 class="text-xl font-bold mb-2">Details</h2>
              <dl class="grid grid-cols-2 gap-2">
                <dt class="font-semibold">Director</dt>
                <dd>{director?.data.name}</dd>
                
                <dt class="font-semibold">Runtime</dt>
                <dd>{movie.data.runtime}</dd>
                
                <dt class="font-semibold">Rating</dt>
                <dd>{movie.data.rated}</dd>
                
                <dt class="font-semibold">IMDB Rating</dt>
                <dd>⭐️ {movie.data.voteAverage}/10</dd>
              </dl>
            </div>

            <div class="border-t pt-4">
              <h2 class="text-xl font-bold mb-2">Genres</h2>
              <div class="flex flex-wrap gap-2">
                {movie.data.genres.map((genre) => (
                  <span class="px-3 py-1 bg-gray-200 rounded-full text-sm">
                    {genre}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base> 